<h2>Books search for '<%= params[:word] %></h2>
<table class="table table-hover table-inverse">
  <% if @range == "User" %>
   <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opnion</th>
        <th colspan></th>
      </tr>
   </thead>
   <tbody>
     <% @users.each do |user| %>
     <tr>
       <td><%= image_tag user.get_profile_image(40, 40), class: "attachment user profile_image fallback" %></td>
       <td><%= link_to user.name, user_path(user.id) %></td>
       <td><%= user.introduction %></td>
     </tr>
   </tbody>
     <% end %>
  <% else %>
  <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opnion</th>
        <th colspan="3"></th>
      </tr>
   </thead>
   <tbody>
     <% @books.each do |book| %>
       <tr>
         <td><%= link_to book.user do %>
            <%= image_tag book.user.get_profile_image(40, 40) %>
            <% end %></td>
         <td><%= link_to book.title, books_path %></td>
         <td><%= book.body %></td>
       </tr>
     <% end %>
   </tbody>
  <% end %>
</table>