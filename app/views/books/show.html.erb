 <div class="container">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
        <%= render 'users/info', user: @user %>
        <h2 class="mt-3">New book</h2>
        <%= render 'books/form', book: @book_new %>
      </div>
      <div class="col-md-8 offset-md-1">
    		<h2>Book detail</h2>
    	  <table class="table">
           <tr>
            <td><%= link_to @book.user do %>
              <%= image_tag @book.user.get_profile_image(40, 40) %><br>
              <%= @book.user.name %>
              <% end %>
            </td>
            <td><%= link_to @book.title, book_path(@book.id) %></td>
            <td><%= @book.body %></td>
            <td>
              <% if @book.favorited_by?(current_user) %>
                <%= link_to book_favorites_path(@book), method: :delete, class: 'text-danger'  do %>
                 <i class="fa-solid fa-heart"></i><%= @book.favorites.count %>
                <% end %>
             <% else %>
                <%= link_to book_favorites_path(@book), method: :post do %>
                 <i class="fa-solid fa-heart"></i><%= @book.favorites.count %>
                <% end %>
             <% end %>
            </td>
            <td>コメント数: <%= @book.book_comments.count %></td>
              <% if @book.user == current_user %>
              <td><%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-sm btn-success edit_book" %></td>
              <td><%= link_to "Destroy", book_path(@book.id), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_book" %></td>
              <% end %>
          </tr>
        </table>
         <div id="comments-area"><%= render 'book_comments/comment', book: @book, book_comment: @book_comment %></div>
      </div>
    </div>
 </div>