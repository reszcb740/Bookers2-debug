 <div class="container">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
        <%= render 'users/info', user: @user %>
        <h2 class="mt-3">New book</h2>
        <%= render 'books/form', book: @book_new %>
      </div>
      <div class="col-md-8 offset-md-1">
    		<h2>Book detail</h2>
    	  <table class="table">
    		  <tr>
            <td><%= link_to @book.user do %>
              <%= image_tag @book.user.get_profile_image(40, 40) %><br>
              <%= @book.user.name %>
              <% end %>
            </td>
            <td><%= link_to @book.title, book_path(@book.id) %></td>
            <td><%= @book.body %></td>
              <% if @book.user == current_user %>
              <td><%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-sm btn-success edit_book" %></td>
              <td><%= link_to "Destroy", book_path(@book.id), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_book" %></td>
              <% end %>
          </tr>
          <div>
            <p>コメント件数 : <%= @book.book_comments.count %></p>
            <%= @book.book_comments.each do |book_comment| %>
             <p><%= image_tag book_comment.user.get_profile_image(40, 40) %></p>
             <%= book_comment.user.name %>
             <%= book_comment.created_at.strftime('%Y/%m%d') %><%= book_comment.comment %>
            <% end %>
          </div>
          <div>
            <%= from_with model: [@book, @book_comment] do |f| %>
             <%= f.text_area :comment, :rows '5', placeholder: "コメントをここに" %>
             <%= f.submit "送信する" %>
            <% end %>
          </div>
        </table>
      </div>
    </div>
 </div>