<h2>Books search for '<%= params[:name] %></h2>
<table class="table table-hover table-inverse">
  <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opnion</th>
        <th>Tag</th>
        <th colspan="3"></th>
      </tr>
   </thead>
   <tbody>
     <% @books.each do |book| %>
       <tr>
         <td><%= link_to book.user do %>
            <%= image_tag book.user.get_profile_image(40, 40) %>
            <% end %></td>
         <td><%= link_to book.title, books_path %></td>
         <td><%= book.body %></td>
         <td><%= book.tags.name %></td>
       </tr>
     <% end %>
   </tbody>
</table>